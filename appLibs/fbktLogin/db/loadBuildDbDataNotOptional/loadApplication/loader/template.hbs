-- APPLICATION DATA SET LOADER

SET search_path TO fbkt_login, public;

INSERT INTO application(
    name
    ,uid
    ,version
    ,require_promo_code_for_registration
)
SELECT 
  '{{this.name}}'
  ,'{{this.uid}}'
  ,'{{this.version}}'
  ,{{#if this.requirePromoCodeForRegistration}}{{this.requirePromoCodeForRegistration}}{{else}}false{{/if}}
WHERE NOT EXISTS (
    SELECT id FROM application WHERE name = '{{this.name}}'
);

{{#each this.licenseTypes}}
  INSERT INTO license_type(
    name
    ,license_type_key
    ,application_id
    ,active
  )
  SELECT
    '{{this.name}}'
    ,'{{this.licenseTypeKey}}'
    ,(SELECT id FROM application WHERE name = '{{../name}}')
    ,'{{#if this.active}}{{this.active}}{{else}}true{{/if}}'
  WHERE NOT EXISTS (
    SELECT id
    FROM license_type
    WHERE license_type_key = '{{this.licenseTypeKey}}'
    AND application_id = (SELECT id FROM application WHERE name = '{{../name}}')
  );

  {{#each this.promoCodes}}
    INSERT INTO promo_code(
      name
      ,the_promo_code
      ,license_type_id
      ,expiration_date
      ,attributes_json
    )
    SELECT
      '{{this.name}}'
      ,'{{this.thePromoCode}}'
      ,(SELECT id FROM license_type WHERE license_type_key = '{{../licenseTypeKey}}')
      ,{{#if this.expirationDate}}'{{this.expirationDate}}'{{else}}NULL{{/if}}
      ,'{{#if this.attributesJson}}{{{json this.attributesJson}}}{{else}}{}{{/if}}'
    WHERE NOT EXISTS (
      SELECT id
      FROM promo_code
      WHERE the_promo_code = '{{this.thePromoCode}}'
      AND license_type_id = (
        SELECT id
        FROM license_type
        WHERE license_type_key = '{{../licenseTypeKey}}'
        AND application_id = (SELECT id FROM application WHERE name = '{{../../name}}')
      )
    );
  {{/each}}

  {{#each this.permissions}}
    INSERT INTO permission(
      name
    )
    SELECT
      '{{this}}'
    WHERE NOT EXISTS (SELECT id FROM permission WHERE name = '{{this}}');

    INSERT INTO license_type_permission (
      license_type_id,
      permission_id
    )
    SELECT
      (SELECT id FROM license_type WHERE license_type_key = '{{../licenseTypeKey}}'),
      (SELECT id FROM permission WHERE name = '{{this}}')
    WHERE NOT EXISTS (
      SELECT
        id
      FROM license_type_permission
      WHERE license_type_id = (SELECT id FROM license_type WHERE license_type_key = '{{../licenseTypeKey}}')
      AND permission_id = (SELECT id FROM permission WHERE name = '{{this}}')
    );
  {{/each}}

{{/each}}


